            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesquisar"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funcionamento da Biblioteca"
    />

